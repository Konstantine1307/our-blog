{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog"
    }
  ],
  "frontMatter.taxonomy.fieldGroups": [
    {
      "id": "galleryImage",
      "labelField": "galleryImage",
      "fields": [
        {
          "title": "Source",
          "name": "src",
          "type": "image"
        },
        {
          "title": "Caption",
          "name": "caption",
          "type": "string",
          "single": true
        }
      ]
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": "'blog'",
      "filePrefix": null,
      "clearEmpty": true,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "pubDate",
          "name": "pubDate",
          "type": "datetime"
        },
        {
          "title": "heroImage",
          "name": "heroImage",
          "type": "image"
        },
        {
          "title": "excerpt",
          "name": "excerpt",
          "type": "string"
        },
        {
          "title": "GalleryImages",
          "name": "galleryImages",
          "type": "block",
          "fieldGroup": [
            "galleryImage"
          ]
        }
      ]
    },
    {
      "name": "blog",
      "previewPath": "'blog'",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "description",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        },
        {
          "name": "updatedDate",
          "type": "datetime",
          "default": true,
          "required": true
        },
        {
          "name": "heroImage",
          "type": "string",
          "single": true,
          "required": true,
          "default": true
        },
        {
          "name": "excerpt",
          "type": "string",
          "single": true,
          "required": true,
          "default": true
        },
        {
          "name": "headline",
          "type": "string",
          "single": true,
          "required": true,
          "default": true
        },
        {
          "name": "galleryImages",
          "type": "list",
          "required": true,
          "default": true
        }
      ]
    }
  ]
}