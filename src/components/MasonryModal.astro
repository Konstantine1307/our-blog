<div
      x-show='isOpen'
      x-transition.duration.1000ms
      class='fixed top-0 left-0 w-full h-full flex items-center justify-center z-50'
    >
      <div
        @click='isOpen = false'
        class='absolute top-0 left-0 w-full h-full bg-black opacity-75 cursor-pointer'
      >
      </div>
      <div class='relative'>
        <button
          @click='isOpen = false'
          class='absolute top-10 right-2 bg-black opacity-50 text-white rounded-md px-2 text-3xl focus:outline-none'
        >
          &times;
        </button>
        <button
          @click='currentIndex = (currentIndex - 1 + images.length) % images.length; currentImage = images[currentIndex].largeSrc; currentTitle = images[currentIndex].title; currentAlt = images[currentIndex].title'
          class='absolute top-1/2 left-0 transform -translate-y-1/2 py-2 px-2 text-xl md:text-4xl  opacity-50 bg-gray-100 rounded-r-lg hover:opacity-75 focus:outline-none focus:ring '
        >
          &lt;
        </button>
        <img
          :src='currentImage'
          :alt='currentAlt'
          class='max-h-screen max-w-screen mx-auto border-2 border-white rounded-md '
        />
        <div
          class='absolute bottom-8 left-0 w-full h-10 bg-black opacity-75 text-white flex items-center justify-between px-4'
        >
          <span x-text='currentTitle' class='text-sm font-bold'></span>
          <span
            x-text='`${currentIndex + 1} / ${images.length}`'
            class='text-sm'></span>
        </div>
        <button
          @click='currentIndex = (currentIndex + 1) % images.length; currentImage = images[currentIndex].largeSrc; currentTitle = images[currentIndex].title; currentAlt = images[currentIndex].title'
          class='absolute top-1/2 right-0 transform -translate-y-1/2 py-2 px-2 text-xl md:text-4xl opacity-50 bg-gray-100 rounded-l-lg hover:opacity-75 focus:outline-none focus:ring'
        >
          &gt;
        </button>
      </div>
    </div>