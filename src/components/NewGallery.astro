---
import MasonryModal from '@components/MasonryModal.astro';
import MasonryTemplate from '@components/MasonryTemplate.astro';
---

<section
  class='border border-box-border bg-box-bg shadow-lg shadow-box-shadow rounded-md py-4 md:py-6 mb-4'
>
  <div class='w-full px-4 md:px-4'>
    <div
      x-data=`{ isOpen: false, currentImage: '', currentTitle: '', currentClass:'', currentAlt:'', images: [
        {
            largeSrc: '/johnny-kayak.webp',
            src: '/johnny-kayak.webp',
            title: 'Johnny Kayaking from the lagoon'
        },
        {
            largeSrc: '/te-tii-cottage.webp',
            src:  '/te-tii-cottage.webp',
            title: 'Relaxing in our new accommodation in Te Tii'
        },
        {
            largeSrc: '/images/gallery-praa-sands-sunset.webp',
            src: '/images/gallery-praa-sands-sunset@0.5x.webp',
            title: 'Sunset at Praa Sands Beach only 3 minutes by car from Tresowes Green Cottage',
            
        },
        {
            largeSrc: '/images/gallery-trees-lake.webp',
            src: '/images/gallery-trees-lake@0.5x.webp',
            title: 'Trees and lake from the gardens in Tresowes Green Cottage',
            className: 'h-52',
        },
        {
            largeSrc: '/images/gallery-garden-cottage.webp',
            src: '/images/gallery-garden-cottage@0.5x.webp',
            title: 'Patio and garden area in The Cottage - two bedroom Holiday Rental',
            className: 'col-span-2 midmd:col-span-1',
        },
    ] , currentIndex: 0 }`
      class='grid grid-cols-2 midsm:grid-cols-2 midmd:grid-cols-5 gap-3'
    >
      <!--Masonry Alpine Template -->
      <MasonryTemplate />
      <!-- Masonry ImageLightbox Modal -->
      <MasonryModal />
    </div>
  </div>
</section>
